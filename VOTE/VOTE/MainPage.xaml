<Window x:Class="VOTE.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VOTE"
        mc:Ignorable="d"
        Title="MainPage" Height="450" Width="800">
    <Grid>
        <!-- Define Grid with two columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <!-- Menu Column -->
            <ColumnDefinition Width="*" />
            <!-- Content Column -->
        </Grid.ColumnDefinitions>

        <!-- Menu on the left side -->
        <StackPanel Grid.Column="0" Background="Black" VerticalAlignment="Stretch">
            <Button Content="Party's" Foreground="Black" FontWeight="Bold" FontSize="16" Margin="10" Background="white" BorderBrush="white" Width="78" />
            <Button Content="Events" Foreground="Black" FontWeight="Bold" FontSize="16" Margin="10" Background="white" BorderBrush="Black" />
        </StackPanel>

        <!-- Content area -->
        <Grid Grid.Column="1">
            <!-- Add content here -->
        </Grid>
    </Grid>
</Window>
