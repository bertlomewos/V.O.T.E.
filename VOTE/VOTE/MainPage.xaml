<Window x:Class="VOTE.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VOTE"
        mc:Ignorable="d"
        Title="MainPage" Height="1080" Width="1920"
        WindowState="Maximized"
        >
    <Grid Background="#FFB1B1B1">
        <!-- Define Grid with two columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Menu on the left side -->
        <StackPanel Grid.Column="0" Background="Black" HorizontalAlignment="Left" Width="100">
            <Button Content="Party's" Foreground="Black" FontWeight="Bold" FontSize="16" Margin="10" Background="White" BorderBrush="White" Width="78" Click="PartyButton_Click" />
            <Button Content="Events" Foreground="Black" FontWeight="Bold" FontSize="16" Margin="10" Background="White" BorderBrush="Black" Click="EventButton_Click" />
        </StackPanel>

        <!-- Content area for parties -->
        <ScrollViewer Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FFB1B1B1" Margin="60,40,0,0" Name="PartiesScrollViewer" Visibility="Hidden">
            <WrapPanel Name="PartiesContainer" Orientation="Horizontal" HorizontalAlignment="Left" />
        </ScrollViewer>

        <!-- Content area for events -->
        <ScrollViewer Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="White" Margin="60,40,0,0" Name="EventsScrollViewer" Visibility="Collapsed">
            <WrapPanel Name="EventsContainer" Orientation="Vertical" HorizontalAlignment="Left" />
        </ScrollViewer>

    </Grid>
    
</Window>
